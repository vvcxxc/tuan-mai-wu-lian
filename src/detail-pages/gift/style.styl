area-block()
  .title
    text-align center
    position relative
    margin 20px 0
    font-size 32px
    font-weight 700
    &:after
      content " "
      width 50px
      border-bottom 6px solid rgba(170, 170, 170, 1)
      position absolute
      bottom -8px
      left 49.5%
      transform translateX(-50%)
.gift
  min-height 100vh
  color rgba(51, 51, 51, 1)
  font-family "PingFang-SC-Medium"
  font-size 29px
  .split
    background-color rgba(246, 246, 246, 1)
    height 20px
  .area-image,
  .area-distibution
    area-block()
  .area-basic,
  .area-image
    .image
      width 100vw
  .area-basic,
  .area-distibution
    .content
      padding 22px
  .area-basic
    .name
      font-size 36px
      font-weight 700
    .score
      color rgba(255, 153, 0, 1)
      font-size 36px
      font-weight 700
     .status
      display flex
      justify-content space-between
      .item
        color rgba(153, 153, 153, 1)
  .area-distibution
    .item
      display flex
      color rgba(51, 51, 51, 1)
      .key
        position relative
        padding-left 15px
        margin-right 15px
        &:before
          position absolute
          content " "
          width 6px
          height 6px
          top 50%
          left 0
          transform translateY(-50%)
          background-color #333
          border-radius 50%
