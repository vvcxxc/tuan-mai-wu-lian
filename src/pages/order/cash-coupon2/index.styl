.cash-coupon-box
  width 714px
  height 208px
  box-sizing: border-box
  position relative
  .image
    position absolute
    width:100%
    height:100%
    z-index :0
  .cash-coupon
    width 714px
    height 208px
    box-sizing: border-box
    background-size: 100%
    background-repeat: no-repeat
    background-position: 0 center
    padding 0 6px 12px
    position absolute
    left 0
    top 0
    z-index :1
    .image
      width 100%
      height:100%
      z-index inherit 0
    .secondary
      position relative
      width 248px
      height 100%
      font-weight bold
      background-size: 100%
      padding-bottom 6px

      .money-wrap
        color: #fff
        // margin-left -20px
        font-size: 46px
        flex-direction column
        align-items center
        justify-content center
        display flex
      .money
        font-size: 60px
        line-height 1
      .info
        font-size: 24px
        font-weight normal
        padding-left 20px
        text-align center
    .middle-bg
      width 40px

    .content
      position relative
      height 100%
      padding 30px 40px
      box-sizing: border-box

      .head
        line-height 1
        font-weight bold
      .label
        line-height 1
        color: #fff
        font-size: 19px
        padding 0 14px
        border-radius: 2px
        font-weight normal
        margin-right 2px
      .date
        color: #000000
        font-size: 22px
        line-height 1
        margin-top 10px
      .info
        font-size: 22px
        color: #999
        line-height 1
        margin-top 12px
      .buymore
        width 134px
        height 44px
        line-height 44px
        text-align center
        color #686868
        font-size 23px
        font-weight bolder
        border 1px solid #686868
        position absolute
        right 1.475rem
        bottom  0.4rem
    &.active
      .secondary
        color: #fff
        // background:linear-gradient(#5d91e0,#6080de);
        .money
          color: #fff
        .info
          color: #fff
