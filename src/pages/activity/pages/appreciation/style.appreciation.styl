area-block()
  position relative
  margin-top 30px
  border-radius 10px
  background-color #fff
  box-shadow 3px 3px 10px rgba(0, 0, 0, 0.1)
  .title
    text-align center
    position relative
    height 96px
    background-repeat no-repeat
    background-position center
    background-size 100%
    margin 0 20px
    line-height 96px
  .split
    height 20px
    background-color #FAFAFA
  .content
    display flex
    padding 20px

.appreciation
  min-height 100vh
  background-repeat no-repeat
  background-size 100%
  background-color rgb(247, 233, 234)
  .container
    font-size 29px
    color #333
    margin 0 22px
    padding-bottom 22px
    .area-participator
      area-block()
      .participator-wrapper
        margin 0 20px
      .item
        display flex
        justify-content space-between
        align-items center
        margin-bottom: 20px
        .avatar
          display flex
          align-items center
          .icon
            width 60px
            height 60px
            margin-right 20px
            border-radius 50%
            background-color rgba(0, 0, 0, 0.1)
            border 1px solid #f9f9f9
            box-sizing content-box
      .result
        padding-top 20px
        font-size 24px
        &:last-child
          margin-bottom: 0
    .area-coupon
      margin-top 30px
      // padding 0 22px
    .area-gift
      area-block()
      .tips
        position absolute
        top 12px
        left 0
        color #fff
        background-color #FD4A3B
        padding 1px 16px
        border-bottom-right-radius 20rpx
        border-top-right-radius 20rpx
        font-size 24px
      .icon
        flex 0 0 180px
        width 180px
        height 180px
        background-color rgba(51, 51, 51, 1)
        border-radius 10px
        margin-right 20px
      .description
        flex 1
        .name
          color rgba(51, 51, 51, 1)
          font-size 32px
        .brief
          color rgba(153, 153, 153, 1)
          font-size 24px
          min-height 80px
        .price
          color rgba(51, 51, 51, 1)
          font-size 32px
    .area-action
      display flex
      margin-top 30px
      .item
        flex 1
        border-radius 60px
        box-shadow 3px 3px 10px rgba(0, 0, 0, 0.1)
        &:first-child
          margin-right 10px
        &.action-invite,
        &.action-appreaciation
          color #fff
          background linear-gradient(to right, #FF3737, #FD4D3C)
        &.action-buy
          color #FD4A3B
          background-color #fff
          border 1px solid #FD4A3B
    .area-title
      padding-top 50px
      text-align center
      font-size 36px
      color #fff
      font-family Helvetica
    .area-panel
      position relative
      min-height 230px
      padding 20px
      margin-top 50px
      background-color #fff
      border-radius 10px
      box-shadow 3px 3px 10px rgba(0, 0, 0, 0.1)
      .status
        display flex
        justify-content space-between
        margin-top 30px
        .text
          color #999
          &.appreciating
            color: #FF5B08
      .process
        margin-top 30px
        background-color #ECECEC
        border-radius 10px
        .process-in
          position relative
          height 20px
          width 80px
          border-radius 10px
          background linear-gradient(to right, #FFC90F, #FF5B08)
          .icon
            position absolute
            top 50%
            right -20px
            transform translateY(-50%)
            width 40px
            height 40px
      .user-info
        display flex
        align-items center
        .icon
          width 45px
          height 45px
          margin-right 20px
          border 1px solid #f9f9f9
          box-sizing content-box
      .coupon_name
        font-size: 34px
        font-weight: 600
      .rule
        position absolute
        top 20px
        right 20px
        padding 4px 18px
        border-radius 34px
        color #fff
        background-color rgba(204,204,204,1)
      .coupon-info
        display flex
        margin-top 30px
        .avatar
          flex 0 0 200px
          width 200px
          height 200px
          margin-right 20px
          background-color rgba(0, 0, 0, 0.1)
          border 1px solid #f9f9f9
          border-radius 10px
          box-sizing content-box
          .icon
            width inherit
            height inherit
        .description
          flex 1
          .name
            font-size 32px
          .brief
            margin-top 5px
            color #7D7F87
          .price
            position relative
            margin-top 10px
            font-family Helvetica
            color #FF5B08
            font-size 48px
            padding-left 24px
            &:after
              position absolute
              content "Â¥"
              bottom 4px
              left 0
              font-size 40px
          .tips
            margin-top 10px
