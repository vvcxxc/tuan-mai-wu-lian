.checkBox_bar
  height 100px
  display flex
  justify-content flex-start
  align-items center
  padding 0 15px
  overflow auto
.checkBox_wrap
    position relative
    //width 160px
    height 45px
    border-radius 5px
    text-align center
    margin-right 20px
    white-space: nowrap;
    // display inline-block
    .checkBox_text
      //color #7b7b7b
      padding 5px 30px
    .checkBox_isCheck
        position absolute;
        bottom 0;
        right 0;
        width: 0;
        height: 0;
        border-bottom: 30px solid #fe7d70;
        border-left: 30px solid transparent;
    .checkBox_cancel
        color #fff;
        width 12px;
        height 28px;
        font-size 20px;
        position absolute;
        right 0;
        bottom 0;



.store_item
  display flex
  padding 0 15px
  // height 280px
  margin-bottom 20px
  .store_img
    // flex 4
    margin-right 15px
    .image_show
      border-radius 8px
      width 300px
      height 300px
  .store_info
    flex 6
    line-height 30px
    padding 0 15px 20px 15px
    display flex
    flex-direction column
    justify-content space-between
    .store_desc
      .store_name
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
        overflow: hidden;
        font-weight 600
        font-size 35px
        line-height 35px
      .store_tips
        margin-top 15px
        .store_tips_item
          padding 5px 20px
          background #fde7e4
          margin-right 10px
          border-radius 8px
          color #fe7d70
          font-weight 500
          font-size 22px
          display inline-block
          max-width 200px
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
    .store_msg
      .store_price
        margin-bottom 5px
        .store_price_new
          font-size 36px
          font-weight 700
          color #fe7d70
        .store_price_old
          font-size 24px
          color #fe7d70
          text-decoration line-through
      .store_other_info
        display flex
        justify-content space-between
        font-size 24px
        .store_any
          .store_follow
            color #fe7d70
          .store_follow_name
            color #ccc
            width 300px
            display inline-block
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
        .store_distance
          margin-left 10px
          .store_distance_num
            color #ccc

.divider
  .at-divider__content.at-divider__content
    background #f4f4f4


.no_store
  display flex
  justify-content center
  align-items center
