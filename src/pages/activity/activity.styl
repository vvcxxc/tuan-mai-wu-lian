  //background #f4f4f4
  Text
    color #c6c6c6

.nearby_store
  padding 0 15px
  .search_nearby
    font-weight 700
    font-size 36px
    margin-bottom 10px
  .nearby_store_item
    display flex
    height 200px
    margin-bottom 15px
    background #fff
    border-radius 8px
    padding 20px 15px
    box-sizing border-box
    box-shadow 2px 2px 10px 1px #ddd
  .nearby_store_img
    flex 2
    Image
      border-radius 8px
      height 100%
      width 100%
  .nearby_store_info
    flex 6
    padding 0 15px
    display flex
    flex-direction column
    justify-content space-between
    .nearby_store_desc
      .nearby_store_name
        font-weight 700
      .nearby_store_msg
        margin-top 5px
        display flex
        justify-content space-between
        .nearby_store_type
          font-size 22px
          color #ccc
        .nearby_store_distance
          font-size 22px
          color #ccc
    .nearby_store_sign
      Text
        font-size 22px
        margin-right 10px
      .group_gift
        padding 5px 10px
        color #fff
        border-radius 8px
        background #d97b0a
      .appreciation_gift
        padding 5px 10px
        color #fff
        border-radius 8px
        background #f16953
      .auth_user
        padding 5px 10px
        border-radius 8px
        background #fff
        color #f16953
        border 1px solid #f16953

