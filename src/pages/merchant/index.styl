.screen-filter
  background: #fff
  >.item
    height 80px

.merchant-list
  width 100%

.new_box {
  display: flex;
  width: 100%;
  // height:100%
  justify-content: center;
  background-color #ededed
  // padding-bottom 20px
  padding-top:20px
  .box {
    width:87vw;
    background:rgba(255,255,255,1);
    border-radius:20px;
    padding-top: 34px;
    padding-left 27px
    padding-right 28px
  }
  .box_bottom {
    margin-bottom -1px
  }
}

.box_title {
  display: flex;
  .title_l {
    width:153px;
    height:152px;
    margin-right 19px;
    Image {
      height 100%
      width 100%
    }
  }
  .title_r{
    flex: 1;
   .view_name1{
      font-size:32px;
      font-family:PingFang-SC-Bold;
      color:rgba(49,49,49,1);
      line-height:1;
      margin-bottom 19px;
      font-weight: bold
    }
    .view_name2{
      font-family:PingFang-SC-Medium;
      // color:rgba(102,102,102,1);
      // color:red;
      font-size: 24px;
      display: flex;
      justify-content: space-between;
      margin-bottom 28px;
    }
   .view{
      display: flex;
      view {
        height 35px
        display: flex;
        align-items: center;
        padding: 0 12px;
        font-size: 18px;
        color:#FFFFFF;
        border-radius:5px;
        font-family:PingFang-SC-Medium;
        margin-right 9px;
        line-height: 1;
      }
      .span {
        border:1px solid rgba(255,102,84,1);
        color:#FF6654;
        font-size: 18px;
        box-sizing: border-box;
      }
    }
  }
}
.box_bottom{
  view {
    font-size: 23px;
    display: flex
    color:rgba(49,49,49,1);
    font-family:PingFang-SC-Regular
    padding-bottom .86rem
    padding-top:.86rem
    line-height: 1
    display: flex
    border-bottom:1px solid rgba(0,0,0,0.1)
    view {
      padding-top 0;
      padding-bottom 0
      border: 0;
      line-height 1.1
    }
    Image {
      width 32px
      height 27px
      margin-right 15px
    }
  }
}
