.merchant-details
    .bcfff
        background-color: #fff
    .shop
        .top-view
            padding: 25px 50px 25px 26px
            .name
                font-size: 46px
                color: #313131
                margin-bottom: 19px
                font-weight bold
            .money
                font-size: 26px
                color: #999999
            .image
                width 40px
                height 40px
        .scroll-view
            .flex
                width: max-content
                .image
                    width 350px
                    height 270px
                    margin: 0 5px
        .address
            padding: 47px 52px 47px 28px
            .text
                padding: 0 10px
            .distance
                padding-right :5px
                border-right 1px solid #000
            .address-img
                width 21px
                height 30px
            .mobile-img
                width 30px
                height 30px
    .group-purchase
        margin-top: 11px
        padding: 0.256rem 0.512rem 0
        height :12rem
        @media screen and (min-device-width : 768px) and (max-device-width : 1024px)
            height 24rem
        .hd
            .tuan
                margin-bottom 10px
            .desc
                text-overflow: ellipsis
                white-space: nowrap
                overflow hidden
                padding-right: 10px
                font-weight bold
            .count
                padding: 0 24px
                color #FF3922
                font-size: 24px
                background-color: #FDE8E5
                border-radius: 5px
        .image-list
            margin : 0 0 0 0
            height: 7.25rem
            width:100%
            display flex
            @media screen and (min-device-width : 768px) and (max-device-width : 1024px)
                height 14.5rem
            .backg-image
                width: 100.2%
                height: 100%
                position: absolute
                z-index :2
            .image
                width: calc((100% - 9px) / 2)
                height 192px
                border-radius: 10px
               
            .img 
                width:100%
                height:100%
                position:relative
                display:flex
                padding: 0 25px 
                box-sizing :border-box
                padding: 0;
            .box_left
                height:100%
                flex:242
                z-index:3
                position relative
                .box_left_price
                    height: 30%
                    width: 100%
                    text-align: center
                    color: #EE3131
                    font-size: 45px
                    margin: 0 auto
                    margin-top: 25%
                    margin-bottom: 5%
                    display: inline-block
                    ._price 
                        font-size: 60px
                        display: inline-block
                        text-align: center
                        color: #EE3131
                        font-weight: bold
                .box_left_return
                    text-align :center
                    font-size :20px
                    background: #FDE8E5;
                    color: #ff4530;
                    height: 40px;
                    width 85%
                    line-height :40px
                    margin-right: 5%
                    float right
            .box_center
                height:100%
                flex:250
                z-index:3
                font-size:24px
                font-weight bold
                box-sizing border-box
                .present 
                    height: 50%
                    width: 90%
                    margin: 20% 5% 0
                    font-size: 25px
                   .present_text
                    display:-webkit-box
                    -webkit-line-clamp: 2
                    overflow: hidden
                    -webkit-box-orient: vertical
                .present_recommend 
                    height: 30%
                    width: 200px
                    padding-left: 5%
                    font-size: 20px
                    color: #ccc
                    overflow: hidden
                    white-space: nowrap
                    text-overflow: ellipsis
            .box_right
                box-sizing: border-box
                height:99%
                padding 0 
                padding-top: 5%
                padding-bottom 2%
                flex:220
                z-index:1
                background #c71d0b
                .image
                    width :100%
                    height:100%
        .ft
            margin: 0
            padding-bottom :10px
            .money
                font-size: 40px
                font-weight: bold
                color #ED6B24
                
            .count
                font-size: 24px
                color: #999999
                margin-left: 17px
            .btn-go
                width 180px
                height 60px
                background:linear-gradient(90deg,#FE7450,#FF2614)               
                border-radius: 5px
                color #fff
                font-size: 24px
                border: none
                line-height 2.5
                &:after
                    display none
    .ft-more
        margin-top: 16px
        padding-bottom 16px
        color #999
        .more-box
            width: calc(100% - 48px)
            border-bottom : 1px solid rgba(0,0,0,0.07)
            padding-bottom: 10px
            padding-top : 10px
    .merchant-details__tit
        font-size: 36px
        paddingLeft: 24px
        fontSize: 19px
        paddingLeft: 24px
        height: 52px
        position: relative
        display: flex 
        alig-items: center
        .mark
            font-size:  20px
            color: #fff
            padding: 2px 10px
            border-radius:  2px
            margin-right: 20px
            position: absolute
            left: 5%
            bottom:0
            vertical-align: inherit
            text-align: center
            width: 24px
        .fwb
            font-weight: bold
            position: absolute
            left: 15%
    .ticket
        padding: 1.5rem 24px 0
        .ticket-view
            width :90% 
            height 7.5rem
            padding: 0 33px
            background-color: #FFFAF4
            border: 1px solid #FFEBCD
            margin-bottom : 34px
            position relative
            @media screen and (min-device-width : 768px) and (max-device-width : 1024px)
                height 15rem
            &:after
            &:before
                display block
                content: ''
                width 30px
                height 30px
                border-radius: 100%
                background-color: #fff
                position: absolute
                top: 50%
                transform: translate(0,-50%)
                border: 1px solid #FFEBCD
            &:after
                right -15px
                border-right-color: transparent
                border-top-color:  transparent
                transform: translate(0,-50%) rotateZ(45deg)
            &:before
                left: -15px
                border-left-color: transparent
                border-top-color:  transparent
                transform: translate(0,-50%) rotateZ(-45deg)
            .left
                padding-right: 30px
                .money
                    font-size: 30px
                    color #313131
                    font-weight bold
                .desc
                    font-size: 22px
                    color: #666666
                    font-weight bold
                .sales
                    font-size: 20px
                    color #999999
            .right
                .money
                    font-size: 40px
                    font-weight bold
                    text-align center
                    color #ED2929
                .btn-buy
                    height 60px
                    width 180px
                    line-height: 2.5
                    border-radius: 5px
                    background:linear-gradient(90deg,#FE7450,#FF2614)
                    color: #fff
                    border: 0
                    font-size: 24px
                    padding: 0 20px

    .discounts-view
        padding: 0 24px
        height 7.5rem
        @media screen and (min-device-width : 768px) and (max-device-width : 1024px)
            height 15rem
        .discounts-cell
            height 100%
            width 100%
            border-bottom: 1px solid rgba(0,0,0,.07)
            position relative
            .image
                width 160px
                height 160px
            .discounts-cell__bd
                padding-left: 23px
                .tit
                    font-size: 30px
                    color #333333
                    margin-bottom: 16px
                .desc
                    font-size: 24px
                    color #666666
                    text-overflow: ellipsis
                    white-space: nowrap
                    overflow hidden
                    margin-bottom: 20px
                    font-weight bold
                .money
                    color: #EE3131
                    font-size: 30px
                .count
                    font-size: 24px
                    color #999
            .btn-buy
                width 180px
                height 60px
                line-height: 2.5
                border-radius: 5px
                background:linear-gradient(90deg,#FE7450,#FF2614)
                color: #fff
                border: 0
                font-size: 24px
                padding: 0 20px
                position absolute
                bottom 40px
                right: 0
    .recommend-view
        padding: 24px
        margin-top: 20px
        .recommend-cell
            padding: 28px 0
            border-bottom: 1px solid #E5E5E5
            .image
               width 144px
               height 144px
            .recommend-cell__bd
                padding-left: 22px
                font-weight bolder
                .tit
                    font-size: 34px
                    margin-bottom: 17px
                .mb33
                    margin-bottom: 33px
                .center
                    font-size: 24px
                    color #999999
                    justify-content: space-between
                    .money
                        font-size: 30px
                        color: #FF850B
                .ellipsis-one 
                    padding 0 
                    margin 0
                    width 60%
                    overflow:hidden
                    white-space: nowrap
                    text-overflow: ellipsis
                .tag-text
                    padding: 6px
                    border-radius: 5px
                    border: 0.05rem solid #FA5D49
                    font-size: 24px
                    color: #FA5D49
                    margin-right: 10px
