.coupon-box
  width 100%
  height 276px
  background: #ffffff
  border-radius: 16px
  padding: 30px
  display: flex
  box-sizing: border-box
  .coupon-img
    width 216px
    height 216px
    border-radius: 16px
    margin-right: 22px
  .coupon-detail
    flex: 1
    position relative
    .coupon-title
      width 100%
      max-height: 61px
      line-height: 28px
      position: relative
      overflow : hidden
      text-overflow: ellipsis
      display: -webkit-box
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
      .coupon-type
        display inline-block
        background: #ff4444
        border-radius: 6px
        padding: 4px 8px
        line-height: 1
        font-size: 20px
        color: #ffffff
        margin-right: 4px
        margin-bottom: 4px
    .coupon-validity
      font-size: 24px
      color: #999999
      margin-top: 10px
    .coupon-label
      height:34px
      background:rgba(254,246,246,1)
      border:1px solid rgba(255,68,68,1)
      border-radius:17px
      padding: 0 18px
      display: flex
      align-items: center
      display inline-block
      font-size: 20px
      color: #ff4444
      font-weight: bold
      box-sizing: border-box
    .coupon-money
      position: absolute
      bottom: 0
      left 0
      color: #ff4444
      font-size: 20px
      .new-money
        font-weight: bold
        font-size: 32px
        margin-right: 6px
      .old-money
        color #999999
        text-decoration:line-through;
    .coupon-button
      width:91px
      height:50px
      background:linear-gradient(0deg,rgba(255,68,68,1),rgba(255,103,68,1))
      border-radius:25px
      color: #ffffff
      font-size: 26px
      display: flex
      align-items: center
      justify-content: center
      position: absolute
      right 0
      bottom: 55px
