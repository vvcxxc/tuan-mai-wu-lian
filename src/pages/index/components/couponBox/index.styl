.coupon-box
  width 100%
  height auto
  background: #ffffff
  border-radius: 16px
  padding: 30px
  display: flex
  box-sizing: border-box
  margin-bottom: 16px
  .coupon-img
    width 216px
    height 216px
    border-radius: 16px
    margin-right: 22px
  .coupon-detail
    flex: 1
    position relative
    display: flex
    flex-direction: column
    justify-content: space-between
    .coupon-title
      width 100%
      // max-height: 61px
      line-height: 38px
      font-size: 26px
      position: relative
      overflow : hidden
      text-overflow: ellipsis
      line-height: 1.2
      display: -webkit-box
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
      .coupon-type
        display inline-block
        vertical-align: 2px
        background: #ff4444
        border-radius: 6px
        padding: 4px 8px
        line-height: 1
        font-size: 20px
        color: #ffffff
        margin-right: 4px
        margin-bottom: 4px
    .coupon-validity
      font-size: 24px
      color: #999999
      margin-top: 10px
      line-height: 1
    .money-box
      // position: absolute
      // bottom: 0
      width 100%
      display: flex
      flex-direction: column
      align-items: flex-start
      .store-money-box
        display: flex
        align-items: baseline
        font-size: 20px
        color #999
      .member-box
        display: flex
        align-items: baseline
        .member-name
          color:#FF4444
          font-size: 20px
          line-height: 1
        .member-money
          color:#FF4444
          font-size: 32px
          font-weight: bold
          line-height: 1
      .member-label
        // width auto
        height 39px
        display: flex
        flex-direction: row
        padding: 0 13px
        background: #333433
        color: #EDD1A6
        font-size: 20px
        align-items: center
        justify-content: center
        line-height 1
        border-radius: 20px
        margin-top: 13px
        .goto
          width 18px
          height 18px
          margin-left: 8px
      .member-label1
        width auto
        height 39px
        display: flex
        padding: 0 13px
        color: #FF4444
        font-size: 20px
        align-items: center
        border-radius: 20px
        margin-top: 13px
        border:1px solid rgba(255,68,68,1)
        background:#fef6f6;
        box-sizing: border-box

    .coupon-button
      width:91px
      height:50px
      background:linear-gradient(0deg,rgba(255,68,68,1),rgba(255,103,68,1))
      border-radius:25px
      color: #ffffff
      font-size: 26px
      display: flex
      align-items: center
      justify-content: center
      position: absolute
      right 0
      bottom: 55px
