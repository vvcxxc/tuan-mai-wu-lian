.order
  border-radius 10px
  overflow hidden
  display flex
  position relative
  background-color #fff
  margin-bottom 20px
  font-size 29px
  color #333
  .avatar
    position relative
    flex 0 0 200px
    width 200px
    min-height 200px
    margin-right 20px
    border-radius 10px
    padding 20px 20px 0 20px
    box-sizing border-box
    display flex
    flex-direction column
    align-items center
    justify-content center
    text-align center
    &.gradient-orange
      background linear-gradient(to right, rgba(254, 192, 105, 1), rgba(244, 125, 111, 1))
    &.gradient-green
      background linear-gradient(to right, rgba(63, 223, 162, 1), rgba(147, 219, 80, 1))
    .price, .desc
      color #fff
      font-size 24px
    .price
      max-width 100%
      .now
        position relative
        padding-left 14px
        font-size 32px
        &:after
          position absolute
          content "Â¥"
          bottom 0
          left 0
          font-size 22px
    .desc
      margin-bottom 5px
    .circle
      position absolute
      height 20px
      width 20px
      background-color #F6F6F6
      border-radius 50%
      right -10px
      z-index 2
      &.top
        top -10px
      &.bottom
        bottom -10px
  .description
    display flex
    flex-direction column
    flex 1
    justify-content space-around
    .item
      color #999
      &.name
        color #000
        font-size 28px
        font-weight 700
        padding-top 10px
      &.brief
        padding-top 5px
        font-size 24px
      &.remark
        font-size 24px
        padding-top 10px
  .actions
    display flex
    position absolute
    bottom 20px
    right 20px
    .item
      font-size 24px
      height 48px
      line-height 48px
      background-color #fff
      &.appreciation
        color #fff
        background-color #F5836E
      &.use
        border 1px solid #F5836E
        box-sizing border-box
        color #F5836E
  .classify
    position absolute
    top 0
    left 0
    font-size 0
    background-color #FD4A3B
    padding 1px 16px
    border-bottom-right-radius 20px
    border-top-right-radius 20px
    font-size 20px
    color #fff
  .progress
    width 100%
    height 20px
    border-radius 20px
    background-color rgba(255,255,255,0.32)
    overflow hidden
    .progress-in
      background-color #fff
      width 20px
      height 100%
      border-radius 20px
