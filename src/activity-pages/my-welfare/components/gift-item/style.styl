.gift-item
  border-bottom 1px solid rgb(222, 222, 228)
  display flex
  position relative
  background-color #fff
  padding 20px
  font-size 29px
  color #333
  .avatar
    position relative
    flex 0 0 147px
    width 147px
    height 147px
    background-color #f1f1f1
    margin-right 20px
    border-radius 5px
    overflow hidden
    .icon
      width inherit
      height inherit
  .description
    display flex
    flex-direction column
    .item
      color #999
      &.name
        color #000
        font-size 28px
        font-weight 700
      &.brief
        padding-top 5px
      &.remark
        font-size 24px
        padding-top 20px
  .actions
    position absolute
    bottom 20px
    right 20px
    display flex
    .item
      display inline-block
      height 48px
      line-height 48px
      font-size 24px
      border-radius 40px
      color #fff
      .active
        background-color #FF9900
      .view
        border 1rpx solid #999
        background-color #fff
        color #999
