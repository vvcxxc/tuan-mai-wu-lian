.tab
  background-color #fff
  white-space nowrap
  font-size 28px
  color #333
  .tab-wrapper
    display flex
    .item
      flex 1
      position relative
      height 5vh
      display inline-block
      padding 0 36px
      text-align center
    .checked
      color #06C1AE
      .underline
        position absolute
        width 25%
        left 75%
        margin-left -37.5%
        bottom -2px
        height 6px
        background-color #06C1AE
