.apply-page
  width 100%
  background: #ffffff
  box-sizing: border-box
  border-radius: 16px
  padding: 30px
  height auto
  min-height: 220px
  line-height: 1
  .apply-title-box
    display: flex
    align-items: center
    margin-bottom: 30px
    .apply-title-left
      width: 8px
      height 25px
      background: #FF4444
      border-radius: 4px
      margin-right: 11px
    .apply-title
      font-size: 36px
      font-weight: bold
  .apply-main
    display: flex
    .store-img
      width 160px
      height 160px
      border-radius: 16px
    .store-detail
      height 100%
      padding: 20px
      flex: 1
      display: flex
      flex-direction: column
      justify-content: space-between
      height 160px
      box-sizing: border-box
      .store-name-box
        display: flex
        justify-content: space-between
        .store-name
          width 450px
          font-size: 36px
          font-weight: bold
          overflow-x:hidden
          white-space: nowrap
          text-overflow: ellipsis
        .store-icon
          .icon
            width 34px
            height 40px
      .store-text
        color: #999999
        font-size: 22px
        line-height: 1.2
        .store-address
          width 465px
          height 30px
          overflow-x:hidden
          white-space: nowrap
          text-overflow: ellipsis
          margin-bottom: 5px
        .meter-box
          display: flex
          align-items: center
          font-size: 22px
          height 22px
          .address-icon
            width 16px
            height 18px
            padding-right: 9px
          .right-arrow
            width 12px
            height 21px
            padding-left: 9px
    .small
      width 114px
      height 114px
    .small-detail
      width 114px
      height 114px
      padding: 0
      padding-left: 20px
      position relative
    .small-icon
      position: absolute
      top: 32px
      right 0
