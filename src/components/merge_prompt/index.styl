.merge_prompt {
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background:rgba(0, 0, 0, 0.6);
    ul {
      padding 0;
      margin-bottom 100px
      display: flex;
      flex-direction: column;
      // justify-content: center;
      // align-content: center;
      align-items: center;
      width:598px;
      height:549px;
      list-style none;
      background:rgba(255,255,255,1);
      border-radius:10px;
      li {
        margin: 0px 53px 22px 53px
        font-size:30px;
        // line-height 32px;
        line-height 1
        font-family:PingFang SC;
        color:rgba(153,153,153,1);
      }
      li:nth-child(1){
        margin-bottom 49px
        padding-top 60px
        font-size:32px;
        font-family:PingFang SC;
        font-weight:bold;
        color:rgba(1,1,1,1);
      }
      li:nth-child(5){
        margin-top 51px
        display: flex;
        Text {
          display: inline-block;
          width:223px;
          height:76px;
          font-size:30px;
          font-family:PingFang SC;
          color:rgba(153,153,153,1);
          line-height 76px;
          text-align: center;
          border-radius: 38px
        }
        Text:nth-child(1){
          margin-right 20px
          color:#999999;
          border:1px solid rgba(153,153,153,1);
        }
        Text:nth-child(2){
          color:rgba(255,255,255,1);
          background:rgba(255,68,68,1);
        }

      }
    }
  }
