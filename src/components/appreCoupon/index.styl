.image-list
  margin : 0 0 0 0
  height: 7rem
  width:100%
  display flex
  @media screen and (min-device-width : 768px) and (max-device-width : 1024px)
      height 14.5rem
  .backg-image
      width: 100.2%
      height: 100%
      position: absolute
      z-index :2
  .image
      width: calc((100% - 9px) / 2)
      height 192px
      border-radius: 10px
  .img
      width:100%
      height:100%
      position:relative
      display:flex
      padding: 0 25px
      box-sizing :border-box
      padding: 0;
  .box_left
      height:100%
      flex:242
      z-index:3
      position relative
      display:flex
      flex-direction:column
      justify-content:center
      align-items:center
      .max_text
        font-size: 28px
        font-weight: 600
        padding-left: 26px
  .box_center
      height:100%
      flex:250
      z-index:3
      font-size:24px
      font-weight bold
      box-sizing border-box
      position relative
    .box_center_main
      width 100%
      height 130px
      position absolute
      padding-left: 34px
      // margin-top: 60px
      bottom: 20px
      box-sizing: border-box
    .coupon_label
      width 140px
      position: absolute
      top: 0
      right 20px
      height 40px
      border: 1px solid #FF3922
      font-size: 24px
      text-align: center
      line-height: 40px
      color: #FF3922
      border-radius: 25px
    .coupon_tips
      font-size: 26px
      // color: #999999
      position: absolute
      bottom: 0
      right 20px
  .box_right
      box-sizing: border-box
      height:99%
      padding 0
      padding-top: 5%
      padding-bottom 2%
      flex:220
      z-index:1
      background #c71d0b
      .image
          width :100%
          height:100%
