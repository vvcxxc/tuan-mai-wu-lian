.cash-coupon
  width 714px
  height 208px
  box-sizing: border-box
  background-size: 100%
  background-repeat: no-repeat
  background-position: 0 center
  padding 0 6px 12px

  .secondary
    position relative
    width 248px
    height 100%
    font-weight bold
    background-size: 100%
    padding-bottom 6px

    .money-wrap
      color: #fff
      margin-left -20px
      font-size: 46px
    .money
      font-size: 94px
      line-height 1
    .info
      font-size: 24px
      font-weight normal
      padding-left 20px
  .middle-bg
    width 40px

  .content
    position relative
    height 100%
    padding 30px 40px
    box-sizing: border-box

    .head
      line-height 1
      font-weight bold
    .label
      line-height 1
      color: #fff
      font-size: 19px
      background: #C5C5C5
      padding 0 14px
      border-radius: 2px
      font-weight normal
      margin-right 2px
    .date
    .info
      font-size: 22px
      color: #999
      line-height 1
      margin-top 12px
  &.active
    .secondary
      color: #fff
      // background:linear-gradient(#5d91e0,#6080de);
      .money
        color: #fff
      .info
        color: #fff
    .label
      background: #5D84E0

