.merchant
  width 100%
  height 100%
  padding-top 20px
  overflow-y: scroll
  &-item
    background: #fff
    margin-bottom 20px
    padding 20px
    .img
      width 194px
      height 194px
      margin-right 12px
    .title
      font-size: 32px
      font-weight bold
      .icon
        font-size: 28px
    .info
      line-height 1
      margin-top 24px
      &-type
      &-distance
        font-size: 24px
        color: #666
    .labels
      margin-top 18px
      .label
        font-size: 20px
        padding 9px 13px
        border 1px solid rgba(255,102,84,1)
        color rgba(255,102,84,1)
        margin-right 10px
        border-radius: 5px
    .btn-box
      .btn
        line-height 1
        font-size: 24px
        padding 12px 25px
        color: #666666
        border: 1px solid #999999
        border-radius: 5px

