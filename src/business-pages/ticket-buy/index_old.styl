.ticket-buy-view
    color: #313131
    border: 2px solid #FFEBCD
    background-color: #FFFAF4
    border-radius: 5px
    padding: 30px 40px
    position: relative
    &:after,
    &:before
        display: block
        content: ''
        position: absolute
        top: 50%
        transform: translate(0,-50%) rotate(-45deg)
        width 30px
        height 30px
        border-radius: 30px
        border-left: 2px solid #FFEBCD
        border-top: 2px solid #FFEBCD
        background-color: #fff
    &:after
        left -15px
        transform: translate(0,-50%) rotate(135deg)
    &:before
        right -15px
    .image
        width: 30px
        height 30px
        position: absolute
        right 48px
        top: 38px
    ._expire
        font-size: 30px
        color : #adacab
        position: absolute
        right :5%
        top :45%
    .tit
        font-size: 28px
    .money
        font-size: 64px
    .ft
        display: flex
        align-items: center
        justify-content: space-between
        .desc
            font-size: 28px
            color: #666
        .tags
            .tag-text
                color: #FA5D49
                font-size: 24px
                border: 2px solid #FA5D49
                padding 1px 8px
                border-radius: 6px
                margin-left : 12px




.set-meal
    .set-meal__tit
        font-size: 36px
        margin-bottom: 24px
        .fwb
            font-weight: bold
    .set_Meal_store 
        height: 315px;
        background: #f4f4f4;
        border: none;
        margin: 24px 0;

        .setMeal_store_box 
            width: 100%;
            height: 100%;
            background: #fff;
            padding: 23px 40px 28px 30px;
            box-sizing: border-box;

            .setMeal_store_title 
                height: 60px;
                text-align: left;
                font-weight: bold;
                font-size: 40px;
                line-height: 1;

            .setMeal_store_storebox 
                height: 115px;
                width: 100%;
                box-sizing: border-box;

                .setMeal_store_Image 
                    height: 115px;
                    width: 115px;
                    overflow: hidden;
                    border-radius: 8px;
                    float: left;

                    .setMeal_store_img 
                        width: 100%;
                        height: 100%;
                    
                .setMeal_store_msg 
                    width: 500px;
                    padding: 0 0 15px 25px;
                    box-sizing: border-box;
                    float: left;

                    .setMeal_store_name 
                        height: 50px;
                        font-size: 35px;
                        font-weight: bold;
                        text-align: left;
                        width: 100%;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space: nowrap;
                    

                    .setMeal_store_price 
                        font-size: 24px;
                        text-align: left;
                        color: #666666;
                    
                

                .setMeal_store_icon 
                    height: 100%;
                    width: 40px;
                    box-sizing: border-box;
                    color: #666666;
                    padding-top: 30px;
                    float: right;
                
            

            .setMeal_store_addressbox 
                width: 100%;
                height: 80px;
                padding-top: 35px;
                box-sizing: border-box;
                display: flex;
                line-height: 40px;

                .setMeal_store_distance 
                    width: 115px;
                    position: relative;
                    float: left;
                    border-right: 1px #ccc solid;

                    .setMeal_store_distance_Image 
                        width: 30px;
                        height: 40px;
                        position: absolute;
                        left: 0;

                        .setMeal_store_distance_AddressImg 
                            width: 30px;
                            height: 40px;
                        
                    

                    .setMeal_store_distance_info 
                        height: 40px;
                        position: absolute;
                        left: 30px;
                        width: 85px;
                        text-align: center;
                        font-size: 18px;
                    
                

                .setMeal_store_address 
                    flex: 1;
                    padding: 0 16px;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                    font-size: 26px;
                

                .setMeal_store_mobile 
                    width: 60px;
                    height: 40px;
                    padding-left: 30px;
                    float: right;
                    border-left: 1px #ccc solid;

                    .setMeal_store_MobileImg 
                        width: 30px;
                        height: 40px;
                        float: right;
