@import '../../utils/config.styl'

.confirm-order
  .content
    background: #ffffff
    padding 0 24px
    margin-bottom 20px
    >.flex
      height 98px
      &:first-child
        border-bottom 1px solid rgba(49,49,49,.1);
      &:last-child
        border-bottom none
    .label
      color: #666666
      font-size: 28px
    .price
      color: theme-color
    .amount
      width 122px
      text-align center
    .at-icon
      font-size: 48px !important

.btn-wrap
  width 100%
  position absolute
  bottom: 62px
  left 0

.submit-btn
  width 690px
  height:91px;
  background:linear-gradient(90deg,rgba(255,148,20,1),rgba(254,134,88,1),rgba(255,23,9,1));
  border-radius:10px;
  color: #ffffff
  font-size: 32px
  margin: 0 auto

.check
      position fixed
      top:50%
      left:50%
      margin-left:-100px
      margin-top :-75px
      width:200px
      height:150px
      background:#000
      opacity:0.5
      color:#fff
      font-size :30px
      font-weight:bolder
      line-height:150px
      border-radius:20px 
      text-align :center