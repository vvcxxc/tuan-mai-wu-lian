@import '../../utils/config.styl'

.confirm-order
  .content
    background: #ffffff
    padding 0 24px
    margin-bottom 20px
    .snameBox
      height auto !important
      padding 24px 0
      box-sizing border-box
    >.flex
      height 98px
      &:first-child
        border-bottom 1px solid rgba(49,49,49,.1);
      &:last-child
        border-bottom none
    .label
      color: #666666
      font-size: 28px
    .price
      color: theme-color
    .amount
      width 122px
      text-align center
    .at-icon
      font-size: 48px !important
.sname
  height auto
  padding 0 24px 0 0
  box-sizing border-box
  .pay-btn-box
    height 80px
    width 100%
    position: fixed
    bottom: 40px
    padding:0 24px
    box-sizing: border-box
    .pay-btn
      width 100%
      height 80px
      line-height 80px
      font-size 32px
      border-radius 15px
      color #fff
      background:linear-gradient(90deg,rgba(255,148,20,1),rgba(254,134,88,1),rgba(255,23,9,1));
      text-align center
.btn-wrap
  width 100%
  position absolute
  bottom: 62px
  left 0
  .submit-btn
    width 690px
    height:91px;
    background:linear-gradient(90deg,rgba(255,148,20,1),rgba(254,134,88,1),rgba(255,23,9,1));
    border-radius:10px;
    color: #ffffff
    font-size: 32px
    margin: 0 auto
    flex-wrap: nowrap
.check
      position fixed
      top:50%
      left:50%
      margin-left:-100px
      margin-top :-75px
      width:200px
      height:150px
      background:#000
      opacity:0.5
      color:#fff
      font-size :30px
      font-weight:bolder
      line-height:150px
      border-radius:20px
      text-align :center
.tips-mask
  width: 100vw
  height: 100vh
  background: rgba(0, 0, 0, .7)
  position: fixed
  z-index: 90
  left: 0
  top: 0
  right: 0
  bottom: 0
  .tips-content
    width: 598px
    height: 407px
    background: rgba(255, 255, 255, 1)
    border-radius: 10px
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    padding-top: 60px
    box-sizing: border-box
    display: flex
    flex-direction: column
    align-items: center
    .tips-title
      width: 100%
      text-align: center
      height: 32px
      line-height: 1
      font-size: 32px
      font-family: PingFang SC
      font-weight: 800
      color: rgba(1, 1, 1, 1)
      margin-bottom: 72px
    .tips-info
      width: 100%
      text-align: center
      height: 28px
      font-size: 28px
      line-height: 1
      font-family: PingFang SC
      font-weight: 500
      color: rgba(153, 153, 153, 1)
      margin-bottom: 92px
    .tips-btn
      width: 466px
      height: 76px
      text-align: center
      line-height: 76px
      background: rgba(255, 68, 68, 1)
      border-radius: 38px
      font-size: 30px
      font-family: PingFang SC
      font-weight: 500