.gift-item-details
    position fixed
    left 0
    top 0
    bottom 0
    background-color rgba(0,0,0,.8)
    width 100vw
    align-items center
    justify-content center
    flex-direction column
    .close-img
        width 69px
        height 69px
        margin-top: 60px
    .content 
        background-color #fff
        border-radius 5px
        width calc(100vw - 80px)
        .cdb
            display block
        .blg
            background linear-gradient(129deg,rgba(252,102,49,1),rgba(253,144,131,1),rgba(255,102,84,1));
        .fs18
            font-size 18px
         .fs26
            font-size 26px
        .fs48
            font-size: 48px
        .gift-image
            width 140px
            height 138px

    .logistics
        .fs24
            font-size 24px
        .logistics-top
            align-items center
            justify-content center
            padding 30px 0
            .gift-image
                margin-right 54px
                border 5px solid #fff
                border-radius 5px
            .bd
                color #fff
                .name
                    font-size 32px
                    margin-bottom 18px
                    text-overflow: ellipsis
                    white-space: nowrap
                    overflow hidden
                .delivery
                    margin-bottom 10px
                
        .shipping-info
            height 50vh
            .shipping-info-cell
                margin-top 26px
                .time
                    width 102px
                    margin-right: 18px
                .right-text
                    width calc(100% - 162px)
                    font-size 22px
                    position: relative
                    padding-left: 26px
                    &:before
                        display block
                        content ''
                        width: 2px
                        background: #999999
                        position: absolute
                        left -10px
                        top: 18px
                        height calc(100% + 26px)
                        z-index 2
                    &:after
                        display block
                        content ''
                        width 18px
                        height 18px
                        border-radius 18px
                        background-color #999999
                        position absolute
                        left -18px
                        top 10px
                        z-index 3
                    .fs26
                        margin-bottom 16px
                &:last-child
                    .right-text:before
                        display none

                &:first-child
                    .time
                        color: #FC6631
                    .right-text
                        color: #FC6631
                        &:after
                            background: #FC6631
    .claim-goods 
        color: #ffffff
        .pd35
            padding: 35px 35px 0
        .pd33
            padding: 33px 0
            border-bottom: 1px solid rgba(49,49,49,.07)
        .blg
            text-align: center
            padding: 30px 0
            .imge-view
                background-color: #fff
                width 315px
                height 315px
                margin: 20px auto 25px
                .image
                    width 100%
                    height 100%
        .useless
            position: relative
            &:after
                display: block
                content: ''
                width 235px
                height 183px
                background: url() 0 0 no-repeat
                position: absolute
                right 0
                top 0
            .image
                opacity .8
            .count
                .taro-text
                     position: relative
                :after
                    display block
                    content ''
                    position absolute
                    left 0
                    top: 50%
                    transform: translate(0,-50%)           
                    width: 100%
                    border-bottom: 1px solid #fff
        .flex
            color #000
            .flex.column
                width calc(100% - 140px)
                justify-content center
                padding: 0 34px
                box-sizing: border-box
        .label-cell
            color #999999
            .val
                color #313131
    .past-due 
        padding: 40px
        box-sizing: border-box
        .claim-goods
            margin-bottom: 52px
            .name
                display: -webkit-box;
                -webkit-box-orient: vertical;
                -webkit-line-clamp: 2;
                overflow: hidden;
                font-size: 32px
        .btn-order
            background:linear-gradient(90deg,rgba(255,148,20,1),rgba(254,134,88,1),rgba(255,23,9,1));
            border: none
            color #fff
            font-size: 32px
    .more
        padding: 30px 0








    